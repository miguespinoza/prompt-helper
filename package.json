{
  "name": "my-extension",
  "displayName": "My Extension",
  "description": "Appends code and file path to a prompt text and displays it in a Markdown file with sections.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "myExtension.sendToPrompt",
        "title": "Send to Prompt"
      },
      {
        "command": "myExtension.loadMarkdownFile",
        "title": "Load Markdown File"
      },
      {
        "command": "myExtension.clearPrompt",
        "title": "Clear Prompt"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "myExtension.sendToPrompt",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "myExtension.sendToPrompt",
        "key": "ctrl+alt+p",
        "mac": "cmd+alt+p",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3",
    "@vscode/test-electron": "^2.3.8"
  }
}
